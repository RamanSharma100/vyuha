{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["./src/**/*.ts", "./tests/**/*.test.ts", "./types/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "examples/**/*"]
}
