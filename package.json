{
  "name": "vyuha",
  "version": "0.1.3",
  "description": "A Template Engine for Node.js inspired by Laravel Blade, EJS and Angular",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "vyuha",
    "template",
    "template-engine",
    "npm",
    "node",
    "nodejs",
    "typescript",
    "node template engine",
    "nodejs template engine"
  ],
  "author": "Raman Sharma",
  "repository": {
    "type": "git",
    "url": "https://github.com/RamanSharma100/vyuha.git"
  },
  "license": "MIT",
  "eslintConfig": {
    "rules": {
      "import/no-anonymous-default-export": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}