{
  "name": "forma",
  "version": "0.0.1",
  "description": "A Template Engine for Node.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm examples/index.ts "
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "forma",
    "template",
    "template-engine",
    "npm",
    "node",
    "nodejs",
    "typescript",
    "node template engine",
    "nodejs template engine"
  ],
  "author": "Raman Sharma",
  "repository": {
    "type": "git",
    "url": "https://github.com/RamanSharma100/forma.git"
  },
  "license": "MIT",
  "eslintConfig": {
    "rules": {
      "import/no-anonymous-default-export": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}